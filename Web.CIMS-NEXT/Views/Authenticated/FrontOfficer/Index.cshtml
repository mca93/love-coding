
@{
    ViewBag.Title = "Front Officer Home Page";
    Layout = "~/Views/Shared/_Public/_Layout.cshtml";
}

    <div class="center-container">


<div class="row" style="width:100%">
    <div class="col-md-6 col-md-offset-4">
        <form method="post">
            @if (IsPost)
            {
                <div class="alert alert-danger">Please enter clients account</div>
            }
            <div class="form-group row">
                <div class="col-md-7">
                    <input type="text" placeholder="Search Client's Name" class="form-control" />

                </div>
                <div class="col-md-1">
                    <a class="btn btn-primary"
                             onclick="@("window.location.href='" + @Url.Action("FrontLineView","FrontOfficer") + "'");">
                        <i class="fa fa-search"></i>
                    </a>
                </div>

            </div>
        </form>

    </div>
</div>
    </div>

